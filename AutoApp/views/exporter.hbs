            <div class="coffeed">
                <div class="coffeed-header" >
                    <legend class="text-center" >Coffees in Factory</legend>
                </div>
                <div class="coffeed-body">
                   <div class="table-container">
      <table class="table" style="width:100%">
          <thead id="colored-table">
              <th>Coffee ID</th>
              <th>Inoice ID</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Shipment Name</th>
              <th>Status</th>
              <th> </th>
          </thead>
          <tbody>
              {{#each itemList}}
              {{#ifequals this.Record.status "In Factory"}}
              <tr>
                  <td>{{this.Key}}</td>
                  <td>{{this.Record.color}}</td>
                  <td>{{this.Record.make}}</td>
                  <td>{{this.Record.model}}</td>
                  <td>{{this.Record.ownedBy}}</td>
                  <td>{{this.Record.status}}</td>
                   <td><button class="btn btn-success filled" onClick="getMatchingOrders('{{this.Key}}');">Get Matching Orders</button></td>

              </tr>
              {{/ifequals}}
              {{/each}}
          </tbody>
      </table>
  </div> 
